#!/bin/bash

CFILE=$1

if [ -z "$CFILE" ]; then
echo "Error: No C file specified."
exit 1
fi

if [ ! -f "$CFILE" ]; then
echo "Error: C file does not exist."
exit 1
fi

OUTFILE=$(basename "$CFILE" .c).o

gcc -c $CFILE -o $OUTFILE

if [ $? -eq 0 ]; then
echo "Compilation complete. Output file: $OUTFILE"
else
echo "Compilation failed."
exit 1
fi

exit 0
